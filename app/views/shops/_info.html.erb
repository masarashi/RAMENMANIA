<table class="table table-striped">
  <tr>
    <th><%= Shop.human_attribute_name(:name) %></th>
    <td><%= shop.name %></td>
  </tr>
  <tr>
    <th><%= Shop.human_attribute_name(:pref) %></th>
    <td><%= shop.prefecture.name %></td>
  </tr>
  <tr>
    <th><%= Shop.human_attribute_name(:address) %></th>
    <td><%= shop.address %></td>
  </tr>
  <tr>
    <th><%= Shop.human_attribute_name(:phone) %></th>
    <td><%= shop.phone %></td>
  </tr>
  <tr>
    <th><%= Shop.human_attribute_name(:description) %></th>
    <td><%= shop.description %></td>
  </tr>
</table>

<% if shop_admin?(current_user) %>
  <div class="text-center mb-4">
    <%#= link_to "編集", [:edit, @shop], class: 'btn btn-primary' %>
    <%= link_to "編集", [:edit, @shop], class: 'fa fa-edit' %>
    <%= link_to "削除", @shop, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'fa fa-trash-alt' %>
  </div>
<% end %>
