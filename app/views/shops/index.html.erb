<% provide(:title, "店舗一覧") %>

<h1>Shops</h1>

<div class="row">
  <% @shops.each do |shop| %>
    <div class="col-md-4 mb-3">
      <div class="card shadow-sm">
        <div class="card-body p-1">
          <%= link_to shop do %>
            <div class="shop_thumb">
              <%= image_tag shop.display_image if shop.image.attached? %>
            </div>
            <div class="p-3">
              <%= shop.name %>
            </div>
            <div class="score">
              <div class="star-rating">
                <div class="star-rating-front" style="width: <%= shop.score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div>
                <%= shop.avg_score %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
