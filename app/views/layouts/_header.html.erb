<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <%= link_to "RANENMANIA", root_path, class: "navbar-brand" %>
      <% if user_signed_in? %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item mr-2"><%= link_to "Top", root_path, class: "nav-link" %></li>
            <li class="nav-item mr-2"><%= link_to "My Shops", users_myshops_path, class: "nav-link" %></li>

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Dropdown
              </a>
              <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                <span class="dropdown-item"><%= link_to "Profile", current_user %></span>
                <span class="dropdown-item"><%= link_to "Log out", destroy_user_session_path, method: :delete %></span>
                <span class="dropdown-divider"></span>
              </div>
            </li>
          </ul>
        </div>
      <% else %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item mr-2"><%= link_to "ログイン", '/users/sign_in', class: "nav-link btn btn-sm btn-outline-secondary" %></li>
          <% if false %>
            <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: " nav-link btn btn-sm btn-outline-secondary" %></li>
          <% end %>
        </ul>
      <% end %>
    </nav>
  </div>
</header>
